{
  "version": "2.0.0",
  "tasks": [
	{
		"label": "build PQC",
		"type": "shell",
		"command": "gcc",
		"args": [
			"-O2",
			"-I",
			"D:/MSYS2/mingw64/include",
			"-L",
			"D:/MSYS2/mingw64/lib",
			"PQC.c",
			"-o",
			"PQC.exe",
			"-loqs",
			"-lcrypto"
		],
		"group": {
			"kind": "build",
			"isDefault": true
		},
		"problemMatcher": [
			"$gcc"
		]
	},
	{
		"type": "cppbuild",
		"label": "C/C++: gcc.exe 生成活动文件",
		"command": "D:\\MSYS2\\mingw64\\bin\\gcc.exe",
		"args": [
			"-fdiagnostics-color=always",
			"-g",
			"${file}",
			"-o",
			"${fileDirname}\\${fileBasenameNoExtension}.exe"
		],
		"options": {
			"cwd": "${fileDirname}"
		},
		"problemMatcher": [
			"$gcc"
		],
		"group": "build",
		"detail": "编译器: D:\\MSYS2\\mingw64\\bin\\gcc.exe"
	}
]
}
